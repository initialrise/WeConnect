
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <title>WeConnect</title>
</head>
<body>
    <nav>
        <ul>
            <li>
                <a href="/"><h3 id="brand">WeConnect</h3></a>
            </li>
            <li>
                <a href="/">Home</a>
            </li>
        </ul>
        <form>
            <input type="text" class="searchBox" />
        </form>
        <div id="profile-head">
            <span class="profile-name">iamlonelyok</span><br />
            <span>1.3K Likes</span>
        </div>
    </nav>

    <div id="main">
        <div id="post-selector">
            <ul>
                <li><a asp-controller="Home" asp-action="Index">Posts</a></li>
                <li><a asp-controller="Home" asp-action="Jobs">Jobs and Internships</a></li>
                <li><a asp-controller="Home" asp-action="Notices">Notices</a></li>
            </ul>
        </div>
        @RenderBody();
          </div>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
